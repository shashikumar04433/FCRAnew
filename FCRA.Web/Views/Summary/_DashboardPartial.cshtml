                    <div class="height-300" id="overallcontrolassessment"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8 ps-md-2  mb-2">
        <div class="card custom-card pb-0">
            <div class="card-body text-center">
                <h3 class="card-title">Area Wise Control Assessment  </h3>
                <div>
                    <div class="height-300" id="areawisecontrolassessment"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@if(riskStage != null){
<input hidden="hidden" value="@riskStage[0].Category" id="hiddRiskAssessment" />
