@model List<ApprovalMatrixViewModel>
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-header">
                    <button class="btnAddApprover float-end btn btn-primary p-1 pb-1">+</button>
                </div>
                <div class="card-body">
                <ul class="sortableApprover list-group" id="draggable-list">
                        @foreach (var matrixItem in Model)
                    {
                        <li class="list-group-item draggable" sequenceno="@matrixItem.SequenceNo" userid="@(matrixItem.UserId == 0 ? 0:matrixItem.UserId)" title="Drag to reorder">
                    Level:<b><span id="spSequence">@matrixItem.SequenceNo</span></b>
                    @if (matrixItem.UserId != 0)
                    {
                    <text> , User: <b>@matrixItem.UserName</b></text>
                    }
                            <button class="btn btn-secondary float-end p-1">x</button>
                    </li>
                    }
                    </ul>
                </div>
            </div>
        </div>
    </div>
<div class="text-center mb-1 mt-2">
    <button class="btn btn-primary" id="btnUpdate">Update</button>
</div>