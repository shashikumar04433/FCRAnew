@model string
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Login";
}
<style>
    .auth-wrapper.auth-v1 .auth-inner:before {
        left: -5000px;
    }
</style>
<div class="col-4 mt-5 login-wrap">
    <form action="@Url.Action("Login","Auth")" method="post">
        <div>
            <h2>Login</h2>
            <div class="sub-title mb-4">Welcome | Please put your login credentials below to start using the application</div>
            <div class="row">
                <div class="col-12">
                     @if (ViewBag.ErrorMessage != null)
                    {
                        <span for="emailaddress" class="text-danger">@ViewBag.ErrorMessage</span>
                    }
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user" aria-hidden="true"> </i> User Email</span>
                        <input type="email" class="form-control" name="emailaddress" id="emailaddress" placeholder="user@example.com" tabindex="1" autofocus value="@Model"
                               data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." />
                        <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <span class="text-danger" data-valmsg-for="emailaddress" data-valmsg-replace="true"></span>
                    </div>                   
                    <div class="mb-3 align-items-center d-flex">
                        <button type="submit" class="btn btn-primary me-3"><i class="fas fa-paper-plane me-2"></i> Next</button>
                        <a href="#" class="link-item fw-bold ms-auto">Forgot password?</a>
                    </div>
                    <div class="mb-3 aml-text-wrapper">
                        <div class="img-aml">
                            <img alt="" src="~/assets/images/aml.png" />
                        </div>
                        <div class="text-aml">
                            Automated AML and Sanctions Risk Assessment
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script>
        $(function () {
            $('#emailaddress').focus();
        });
    </script>
}
