@model FCRA.Web.Models.LoginViewModel
@{
    Layout = "_LayoutEmpty";
    ViewData["Title"] = "Login";
}

<div class="col-4 mt-5 login-wrap">
    <div>
        <a asp-action="Login" asp-controller="Auth" asp-area="" class="backButton" data-toggle="tooltip" title="Back to Login"><i class="fa fa-arrow-left"></i></a>
        <h2>Login</h2>
        <form action="@Url.Action("Login","Auth")" method="post">
            <div class="sub-title mb-4">Welcome | Please put your login credentials below to start using the application</div>
            <div class="row">
                <div class="col-12">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="input-group mb-3">
                        <input name="emailaddress" type="hidden" value="@ViewBag.Email" />
                        <input asp-for="Email" type="hidden" />
                        <input asp-for="ReturnUrl" type="hidden" />
                        <span class="input-group-text"><i class="fas fa-unlock-alt"></i>  Password</span>
                        <input asp-for="Password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label nomandatory"></label>
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                    </div>
                    <div class="mb-3 align-items-center d-flex">
                        <button type="submit" class="btn btn-primary me-3"><i class="fas fa-paper-plane me-2"></i> Login</button>
                        <a href="#" class="link-item fw-bold ms-auto">Forgot password?</a>
                    </div>
                    <div class="mb-3 aml-text-wrapper">
                        <div class="img-aml">
                            <img alt="" src="~/assets/images/aml.png" />
                        </div>
                        <div class="text-aml">
                            Automated AML and Sanctions Risk Assessment
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>
@section Scripts{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script>
        $(function () {
           setTimeout(function(){ $('#Password').focus();},20);
        });
    </script>
}
@section extracss{
    <style>
        .backButton {
            font-size: 20px;
            position: absolute;
            top: 20px;
        }
    </style>
    @if (ViewBag.CompanyLogo != null && !string.IsNullOrWhiteSpace(Convert.ToString(ViewBag.CompanyLogo)))
    {
        <style>
            .auth-wrapper.auth-v1 .auth-inner:before {
                background-image: url('@ViewBag.CompanyLogo');
            }
        </style>
    }
}